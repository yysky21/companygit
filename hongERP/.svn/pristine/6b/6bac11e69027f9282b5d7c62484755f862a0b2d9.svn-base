<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3><c:choose><c:when test="${entity != null}">查看</c:when><c:otherwise>添加</c:otherwise></c:choose>商品盘点</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                  </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>ERP <small>商品盘点</small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form class="form-horizontal form-label-left" novalidate id="form1">
                            <span class="section">商品盘点信息</span>
                            <c:if test="${entity != null}">
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="checkNo">盘点单据编号： <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="checkNo" name="checkNo" value="${entity.checkNo}" class="form-control col-md-7 col-xs-12" readonly required>
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="warehouse">盘点仓库： <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" id="warehouse" name="warehouse" value="${entity.warehouse.name}" class="form-control col-md-7 col-xs-12" style="width:40%" placeholder="输入仓库名称" required />
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="dept">盘点部门： <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" id="dept" name="dept" value="${entity.dept.name}" class="form-control col-md-7 col-xs-12" style="width:40%" placeholder="输入部门名称" required />
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="quantity">盈亏总数量： <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="quantity" name="quantity" value="${entity.checkNo}" class="form-control col-md-7 col-xs-12" readonly required>
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="amount">盈亏总金额： <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="amount" name="amount" value="${entity.amount}" class="form-control col-md-7 col-xs-12" readonly required>
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="chartMaker">制单人： <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" id="chartMaker" name="chartMaker" value="${entity.chartMaker.name}" class="form-control col-md-7 col-xs-12" readonly required />
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="company">公司： <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" id="company" name="chartMaker" value="${entity.company.name}" class="form-control col-md-7 col-xs-12" readonly required />
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="remark">备注： <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="remark" name="remark" value="${entity.remark}" class="form-control col-md-7 col-xs-12" readonly required>
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="checkDate">盘点日期： <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input id="checkDate" name="checkDate" value="${entity.checkDate}" class="form-control col-md-7 col-xs-12" readonly required>
                                    </div>
                                </div>
                            </c:if>
                        </form>
                    </div>
                    <c:if test="${entity != null}">
                        <div class="x_content" style="overflow: auto">
                            <table id="productList" class="table-sheet" width="100%">
                                <thead>
                                    <tr><th>存货编码</th><th>存货名称</th><th>计量单位</th><th>单价</th><th>账面数量</th><th>盘点数量</th><th>账面金额</th><th>盘点金额</th><th>盈亏数量</th><th>盈亏金额</th></tr>
                                </thead>
                                <tbody>
                                    <c:if test="${entity.details != null}">
                                        <c:forEach items="${entity.details}" var="detail">
                                            <tr>
                                                <td>${detail.itemNo}</td>
                                                <td>${detail.productId}</td>
                                                <td>${detail.unit}</td>
                                                <td>${detail.unitPrice}</td>
                                                <td>${detail.quantity}</td>
                                                <td>${detail.unit}</td>
                                                <td>${detail.amount}</td>
                                                <td>${detail.checkId}</td>
                                            </tr>
                                        </c:forEach>
                                    </c:if>
                                </tbody>
                            </table>
                        </div>
                    </c:if>
                    <c:if test="${entity == null}">
                        <form class="form-horizontal" role="form" id="form">
                            <div class="container">
                                <div class="row form-group">
                                    <div class="col-xs-4">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="item form-group">
                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="checkNo1">盘点单据编号 (<span class="required">*</span>)：
                                                    </label>
                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                        <input type="text" id="checkNo1" name="checkNo" value="${no}" class="form-control col-md-7 col-xs-12" readonly required />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="item form-group">
                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="warehouse">选择仓库 (<span class="required">*</span>)：
                                                    </label>
                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                        <input type="text" id="warehouse1" name="warehouse" value="${entity.warehouse.name}" class="form-control col-md-7 col-xs-12" placeholder="输入仓库名称" required />
                                                        <input type="hidden" id="warehouse[id]" name="warehouse[id]" value="${entity.warehouse.id}">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="item form-group">
                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="code1">扫描条形码：
                                                    </label>
                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                        <input type="text" id="code1" name="itemNo" value="" class="form-control col-md-7 col-xs-12" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="item form-group">
                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="code2">输入条形码：
                                                    </label>
                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                        <input type="text" id="code2" name="itemNo" value="" class="form-control col-md-7 col-xs-12" />
                                                    </div>
                                                    <button id="confirm" type="button" style="float: left;margin-top: 4px">确定</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row checkQuantity" style="display: none">
                                            <div class="col-xs-12">
                                                <div class="item form-group">
                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"  for="checkQuantity1">请输入盘点数量：
                                                    </label>
                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                        <input type="text" id="checkQuantity1" name="checkQuantity1" class="form-control col-md-7 col-xs-12"  />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-8">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">条形码扫描统计</div>
                                            <table class="table" id="code">
                                                <tr><th>条形码</th><th>盘点数量</th></tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" id="state" name="state:number" value="<c:choose><c:when test="${entity != null}">${entity.state}</c:when><c:otherwise>0</c:otherwise></c:choose>">
                            <input type="hidden" id="chartMaker[id]" name="chartMaker[id]" value="${userId}"  />
                        </form>
                    </c:if>
                    <div class="ln_solid"></div>
                    <div class="form-group" id="submitDiv">
                        <div class="col-md-6 col-md-offset-10">
                            <button id="cancel" type="button" class="btn btn-primary">取消</button>
                            <c:if test="${entity == null}">
                                <button id="send" type="button" class="btn btn-success">保存</button>
                                <button id="doCheck" type="button" class="btn btn-success">盘点</button>
                            </c:if>
                            <c:if test="${entity != null}">
                                <c:if test="${entity.state == 0}">
                                    <button id="edit" type="button" class="btn btn-primary">编辑</button>
                                    <button id="send" type="button" class="btn btn-danger">更新</button>
                                    <button id="check" type="button" class="btn btn-danger">提交盘点</button>
                                </c:if>
                            </c:if>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    init(<c:out value="${entity == null}"/>);

    $("#warehouse1").coolautosuggest({
        url:"<%=request.getContextPath()%>/erp/suggest/warehouse/name/",
        showProperty: 'name',
        onSelected:function(result){
            if(result!=null){
                $(document.getElementById("warehouse[id]")).val(result.id);
            }
        }
    });

    // 计量单位
    var unit;

    // 查询商品计量单位
    function queryUnit(code) {
        var json = JSON.stringify({"id":parseInt(code.val())});
        $(this).ajaxPost("<%=request.getContextPath()%>/erp/privateQuery/productUnit",json,function (result) {
            if (result.unit != null || result.unit != ""){
                unitsMap[code.val()] = result.unit;
            }else {
                unitsMap[code.val()] = "件";
            }
        });

    }


    // 判断是否选择了仓库
    function stockIsSelect(code) {
        if ($("#warehouse1").val()==null || $("#warehouse1").val()==""){
            alert("请先选择仓库！");
            $("#warehouse1").focus();
            return false;
        }
    }

    /*$("#warehouse1").blur(function () {
        code1.val("");
        code2.val("");
    })*/

    $("#checkQuantity1").blur(function () {
        if ($("#checkQuantity1").val() == "" || $("#checkQuantity1").val() == null){
            alert("请输入盘点数量！");
            return false;
        } else {
            var reg = /^\d+(\.\d+)?$/;
            if (reg.test($("#checkQuantity1").val()) == false){
                alert("盘点数量必须为纯数字，包括小数");
                $("#checkQuantity1").val("");
                return false;
            } else {
                var code1 = $("#code1");
                var code2 = $("#code2");
                var code;
                if (code1 != null){
                    code= code1
                }
                if (code2 != null){
                    code= code2
                }
                var newTr = $("<tr><td><input name='details[][product[id]]:number' value='"+code.val()+"' readonly /></td>" +
                    "<td><input name='checkQuantity' value='"+$("#checkQuantity1").val()+"' readonly /></td></tr>");
                $("#code").append(newTr);
                $("#checkQuantity1").val("");
                $(".checkQuantity").css("display","none");
                code.val("");
                code.focus();
            }
        }
    })

    // 设置盘点数量
    function setCheckQuantity(code) {
        var json = JSON.stringify({"id":parseInt(code.val())});
        $(this).ajaxPost("<%=request.getContextPath()%>/erp/privateQuery/productUnit",json,function (result) {
            if (result.unit != null || result.unit != ""){
                unit = result.unit;
                if(unit == "克" || unit == "克拉"){
                    $(".checkQuantity").css("display","block");
                }else {
                    var newTr = $("<tr><td><input name='details[][product[id]]:number' value='"+code.val()+"' readonly /></td>" +
                        "<td><input name='checkQuantity' value='1' readonly /></td></tr>");
                    $("#code").append(newTr);
                    code.val("");
                    code.focus();
                }
            }else {
                unit = "件";
            }
        });

    }

    // 为扫描框绑定一个内容改变事件
    $("#code1").bind("input propertychange", function() {
        if (stockIsSelect($("#code1"))==false){
            return false;
        }
        if ($("table > tbody > tr >").length>5){
            alert("请保存后再继续扫描条形码");
            $("#code1").val("");
            return false;
        }else {
            if (setCheckQuantity($("#code1"))==false){
                return false;
            }
        }
    });

    $("#confirm").click(function () {
        if (stockIsSelect($("#code2"))==false){
            return false;
        }
        if ($("table > tbody > tr").length>5){
            alert("请保存后再继续输入条形码");
            $("#code2").val("");
            return false;
        }else {
            if (setCheckQuantity($("#code2"))==false){
                return false;
            }
        }
    });

    $("#code2").keypress(function (e) {
        if (stockIsSelect($("#code2"))==false){
            return false;
        }
        if ($("table > tbody > tr").length>5){
            alert("请保存后再继续输入条形码!");
            $("#code2").val("");
            return false;
        }else {
            if (e.keyCode == 13) {
                if (setCheckQuantity($("#code2"))==false){
                    return false;
                }
            }
        }
    });
    
    $("#send").click(function () {
        addProductCheck('<%=request.getContextPath()%>/erp/<c:choose><c:when test="${entity != null}">update</c:when><c:otherwise>save</c:otherwise></c:choose>/productCheck');
    });

</script>